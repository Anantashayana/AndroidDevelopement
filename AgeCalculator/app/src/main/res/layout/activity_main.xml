<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CBB9"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="How Old are You?"
        android:textAllCaps="false"
        android:textColor="#053E39"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Age Calculator"
        android:textAllCaps="false"
        android:textColor="#06023A"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inika"
        android:padding="20dp"
        android:text="You calculate your completed age in terms of the full years you have completed since your date of birth. So, if a person was born on 28 January 2001 then their completed age as of 23 September 2022 will be 21 years."
        android:textAllCaps="false"
        android:textColor="#376D98"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Selected Date"
        android:textAllCaps="false"
        android:textColor="#06023A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/happy_monkey"
        android:text="20/07/2002"
        android:textAllCaps="false"
        android:textColor="#06023A"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ageDispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/quantico"
        android:text="âœ¨ You are 0 years Old  ðŸŽ‰"
        android:textAllCaps="false"
        android:textColor="#875308"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>